<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.Login">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="90dp"
        android:gravity="center"
        android:text="MUHAMMAD"
        android:textColor="#3DAA31"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_log_in"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_log_in"
        app:layout_constraintStart_toStartOf="@+id/email_log_in"
        app:layout_constraintTop_toBottomOf="@+id/email_log_in" />

    <EditText
        android:id="@+id/email_log_in"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/save_log_in"
        android:layout_width="260dp"
        android:layout_height="55dp"
        android:layout_marginTop="25dp"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/password_log_in"
        app:layout_constraintStart_toStartOf="@+id/password_log_in"
        app:layout_constraintTop_toBottomOf="@+id/password_log_in" />

</androidx.constraintlayout.widget.ConstraintLayout>