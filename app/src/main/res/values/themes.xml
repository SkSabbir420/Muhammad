<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Muslimdream" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/love</item>
        <item name="colorPrimaryVariant">@color/love</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/love</item>
        <item name="colorSecondaryVariant">@color/love</item>
        <item name="colorOnSecondary">@color/love</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">?attr/colorPrimaryVariant
        </item>

    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textColor">@color/love</item>
    </style>

</resources>